import java.util.Scanner;
class SimplePattern7
{
	public static void main(String[] args) 
	{
		Scanner sc=new Scanner(System.in);
		System.out.println("Enter the value");
		int n=sc.nextInt();
		for (int i=0;i<=n ;i++ )
		{
			for (int j=0;j<=n ;j++ )
			{
				if (i==0)
				{
					System.out.print("0"+" ");
				}
				else if (i==n)
				{
					System.out.print("2"+" ");
				}
				else if ((j==0))
				{
					System.out.print("1"+" ");
				}
				else if ((j==n)||(i==n))
				{
					System.out.print("3"+" ");
				}
				else
				{
				System.out.print("#"+" ");
				}
			}
			System.out.println();
		}
	}
}
